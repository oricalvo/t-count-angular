{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "build/main.ts",
    "src/index.ts",
    "src/globals.d.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}